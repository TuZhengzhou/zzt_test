    "version": "0.2.0",
    "configurations": [
        {
            "name": "run_code_split",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/code_split",
            "cwd": "${fileDirname}",
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "将反汇编风格设置为 Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build_code_split"       
        }

    ]
}